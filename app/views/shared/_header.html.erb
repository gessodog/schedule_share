<header class='top-page-header'>
  <div class='nav'>
    <ul class='lists-left'>
      <li><%= link_to 'Schedule Share', "/", class: "category-list" %></li>
      <% if user_signed_in? %>
      <li><%= link_to 'ルーム', rooms_path, class: "brand-list" %></li>
      <% end %>
    </ul>
    <ul class='lists-right'>
      <% if user_signed_in? %>
      <li><%= link_to  current_user.name, "/users/#{current_user.id}", class: "user-name" %> </li>
      <li><%= link_to 'ログアウト', destroy_user_session_path, data: {turbo_method: :delete}, class: "logout" %> </li>
      <% else %>
      <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
      <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
